
.chat-side
  .side-header
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path do
          = icon('fas', 'pen-square', class: 'icon-n')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon-e')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group-messe" do
          .group-items__name
            = group.name
          .group-items__message
            = group.show_last_message