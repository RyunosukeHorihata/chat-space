.message{data: {message: {id: message.id}}}
  .message-items
    .message-items__user
      = message.user.name
    .message-items__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-bottom
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, size: "200x200", class: 'lower-message__image' if message.image.present?